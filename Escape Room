    <script>
        const questions = [
            {
                question: "¬øCu√°l es la principal diferencia entre el orden d√≥rico y el j√≥nico griego?",
                options: [
                    "El d√≥rico tiene capitel decorado con volutas, el j√≥nico es liso",
                    "El j√≥nico tiene capitel decorado con volutas, el d√≥rico es liso",
                    "El d√≥rico es m√°s alto que el j√≥nico",
                    "No hay diferencias significativas entre ambos"
                ],
                correct: 1,
                code: "D"
            },
            {
                question: "¬øQu√© elemento arquitect√≥nico romano permiti√≥ construir grandes espacios cubiertos?",
                options: [
                    "La columna corintia",
                    "El arco de medio punto",
                    "El capitel compuesto",
                    "El entablamento"
                ],
                correct: 1,
                code: "O"
            },
            {
                question: "¬øC√≥mo se llama la sala principal de un templo griego donde se ubicaba la estatua del dios?",
                options: [
                    "Pronaos",
                    "Opist√≥domos",
                    "Naos o cella",
                    "Peristilo"
                ],
                correct: 2,
                code: "R"
            },
            {
                question: "¬øQu√© material revolucionario utilizaron los romanos en sus construcciones?",
                options: [
                    "M√°rmol de Carrara",
                    "Piedra caliza",
                    "Hormig√≥n (opus caementicium)",
                    "Bronce"
                ],
                correct: 2,
                code: "I"
            },
            {
                question: "¬øCu√°l era la funci√≥n principal de una bas√≠lica romana?",
                options: [
                    "Celebrar ceremonias religiosas",
                    "Administrar justicia y realizar negocios",
                    "Realizar espect√°culos gladiatorios",
                    "Servir como residencia imperial"
                ],
                correct: 1,
                code: "C"
            },
            {
                question: "¬øQu√© caracteriza al orden corintio?",
                options: [
                    "Capitel decorado con hojas de acanto",
                    "Capitel con volutas",
                    "Capitel liso sin decoraci√≥n",
                    "Capitel con figuras humanas"
                ],
                correct: 0,
                code: "U"
            },
            {
                question: "¬øC√≥mo se denomina el espacio semicircular que corona algunas bas√≠licas romanas?",
                options: [
                    "Atrio",
                    "N√°rtex",
                    "√Åbside",
                    "Transepto"
                ],
                correct: 2,
                code: "M"
            },
            {
                question: "¬øQu√© tipo de planta ten√≠an t√≠picamente los templos griegos?",
                options: [
                    "Planta circular",
                    "Planta basilical",
                    "Planta rectangular rodeada de columnas",
                    "Planta octogonal"
                ],
                correct: 2,
                code: "!"
            }
        ];
        
        let currentQuestion = 0;
        let score = 0;
        let selectedAnswer = -1;
        let gameCode = "";
        let timeLeft = 45 * 60; // 45 minutos en segundos
        let timerInterval;
        
        function showTheory() {
            document.getElementById('presentation').classList.remove('active');
            document.getElementById('theory').classList.add('active');
        }
        
        function showGameFromTheory() {
            document.getElementById('theory').classList.remove('active');
            document.getElementById('game').classList.add('active');
            startTimer();
            showQuestion();
        }
        
        function backToPresentation() {
            document.getElementById('theory').classList.remove('active');
            document.getElementById('presentation').classList.add('active');
        }
        
        function startEscapeRoom() {
            document.getElementById('presentation').classList.remove('active');
            document.getElementById('game').classList.add('active');
            startTimer();
            showQuestion();
        }
        
        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                document.getElementById('timer').innerHTML = `‚è±Ô∏è ${minutes}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    endGame();
                }
            }, 1000);
        }
        
        function showQuestion() {
            const q = questions[currentQuestion];
            const container = document.getElementById('questionContainer');
            
            container.innerHTML = `
                <div class="question">
                    <h3>üèõÔ∏è Desaf√≠o ${currentQuestion + 1}</h3>
                    <p><strong>${q.question}</strong></p>
                    <div class="options">
                        ${q.options.map((option, index) => 
                            `<div class="option" onclick="selectAnswer(${index})">${String.fromCharCode(65 + index)}) ${option}</div>`
                        ).join('')}
                    </div>
                </div>
            `;
            
            document.getElementById('currentQ').textContent = currentQuestion + 1;
            updateProgress();
            selectedAnswer = -1;
            document.getElementById('submitBtn').disabled = true;
            document.getElementById('nextBtn').style.display = 'none';
        }
        
        function selectAnswer(index) {
            const options = document.querySelectorAll('.option');
            options.forEach(opt => opt.classList.remove('selected'));
            options[index].classList.add('selected');
            selectedAnswer = index;
            document.getElementById('submitBtn').disabled = false;
        }
        
        function submitAnswer() {
            if (selectedAnswer === -1) return;
            
            const q = questions[currentQuestion];
            const options = document.querySelectorAll('.option');
            
            options.forEach((opt, index) => {
                if (index === q.correct) {
                    opt.classList.add('correct');
                } else if (index === selectedAnswer && index !== q.correct) {
                    opt.classList.add('incorrect');
                }
            });
            
            if (selectedAnswer === q.correct) {
                score += 100;
                gameCode += q.code;
            }
            
            document.getElementById('score').textContent = score;
            document.getElementById('submitBtn').style.display = 'none';
            document.getElementById('nextBtn').style.display = 'inline-block';
        }
        
        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion < questions.length) {
                showQuestion();
                document.getElementById('submitBtn').style.display = 'inline-block';
            } else {
                endGame();
            }
        }
        
        function updateProgress() {
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }
        
        function endGame() {
            clearInterval(timerInterval);
            document.getElementById('game').classList.remove('active');
            document.getElementById('final').classList.add('active');
            
            document.getElementById('finalScore').textContent = score;
            document.getElementById('finalCode').textContent = `C√ìDIGO SECRETO: ${gameCode}`;
            
            let message = "";
            if (score >= 700) {
                message = "¬°EXCELENTE! Sois verdaderos maestros de la arquitectura cl√°sica.";
            } else if (score >= 500) {
                message = "¬°MUY BIEN! Ten√©is buenos conocimientos sobre el tema.";
            } else if (score >= 300) {
                message = "¬°BIEN! Hab√©is logrado escapar, pero pod√©is mejorar.";
            } else {
                message = "¬°SUFICIENTE! Necesit√°is repasar m√°s la arquitectura cl√°sica.";
            }
            
            document.getElementById('finalMessage').textContent = message;
        }
        
        function restartGame() {
            currentQuestion = 0;
            score = 0;
            selectedAnswer = -1;
            gameCode = "";
            timeLeft = 45 * 60;
            
            document.getElementById('final').classList.remove('active');
            document.getElementById('presentation').classList.add('active');
        }
    </script>
</body>
</html>
